<Window x:Class="Charply.Windows.GameMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Charply.Windows"
        mc:Ignorable="d"
        Title="GameMenu" Height="210" Width="300"
        
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <StackPanel Background="Gray">
        <Button Margin="60 40 60 2.5" Name="btnBack" Click="btnBack_Click">Back</Button>
        <Button Margin="60 2.5" Name="btnSave" Click="btnSave_Click">Save</Button>
        <Button Margin="60 2.5" Name="bntLoad" Click="bntLoad_Click">Load</Button>
        <Button Margin="60 2.5" Name="btnToMenu" Click="btnToMenu_Click">Exit to menu</Button>
        <Button Margin="60 2.5 60 40" Name="btnQuit" Click="btnQuit_Click">Quit game</Button>
    </StackPanel>
</Window>
